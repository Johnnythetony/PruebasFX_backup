<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<SplitPane dividerPositions="0.2, 0.7" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.rico.javafx.login.Controllers.JugadoresController">
   <items>
      <StackPane prefHeight="150.0" prefWidth="200.0">
         <children>
            <Accordion>
              <panes>
                <TitledPane animated="false" text="untitled 1" />
                <TitledPane animated="false" text="untitled 2" />
              </panes>
            </Accordion>
         </children>
      </StackPane>
      <StackPane prefHeight="150.0" prefWidth="200.0">
         <children>
              <TableView fx:id="tablaJugadores">
                  <columns>
                      <TableColumn fx:id="colId" prefWidth="100.0" text="Id" />
                      <TableColumn fx:id="colNombre" prefWidth="100.0" text="Nombre" />
                      <TableColumn fx:id="colApellido" prefWidth="100.0" text="Apellido" />
                      <TableColumn fx:id="colApodo" prefWidth="90.0" text="Apodo" />
                      <TableColumn fx:id="colFechaNacimiento" prefWidth="120.0" text="Fecha Nacimiento" />
                      <TableColumn fx:id="colTipoJuego" prefWidth="100.0" text="Estilo de Juego" />
                  </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
              </TableView>
         </children>
      </StackPane>
      <StackPane prefHeight="150.0" prefWidth="200.0">
         <children>
              <VBox alignment="CENTER" prefWidth="250.0" spacing="15.0">
                  <padding>
                      <Insets top="10.0" />
                  </padding>
                  <Label text="Detalles del Jugador">
                      <font>
                          <Font name="System Bold" size="16.0" />
                      </font>
                  </Label>
                  <GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
                      <Label text="Nombre:" GridPane.rowIndex="0" />
                      <TextField fx:id="tfNombre" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                      <Label text="Apellido:" GridPane.rowIndex="1" />
                      <TextField fx:id="tfApellido" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                      <Label text="Apodo:" GridPane.rowIndex="2" />
                      <TextField fx:id="tfApodo" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                      <Label text="Nacimiento:" GridPane.rowIndex="3" />
                      <DatePicker fx:id="dpFechaNacimiento" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                      <Label text="Estilo:" GridPane.rowIndex="4" />
                      <ComboBox fx:id="cbTipoJuego" prefWidth="175.0" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <columnConstraints>
                     <ColumnConstraints />
                     <ColumnConstraints />
                  </columnConstraints>
                  <rowConstraints>
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                     <RowConstraints />
                  </rowConstraints>
                  </GridPane>
                  <HBox alignment="CENTER" spacing="10.0">
                      <Button fx:id="btnAnadir" onAction="#handleAnadir" text="AÃ±adir" />
                      <Button fx:id="btnModificar" onAction="#handleModificar" text="Modificar" />
                      <Button fx:id="btnEliminar" onAction="#handleEliminar" text="Eliminar" />
                  </HBox>
                  <Button fx:id="btnLimpiar" onAction="#handleLimpiar" text="Limpiar Formulario" />
                  <Button fx:id="btnSubmit" onAction="#handleSubmit" text="Aplicar cambios" />
              </VBox>
         </children>
      </StackPane>
   </items>
</SplitPane>
