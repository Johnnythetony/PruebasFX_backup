<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<SplitPane dividerPositions="0.15, 0.75" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.rico.javafx.login.Controllers.PeliculasController">
    <items>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
            <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0">
              <items>
                  <TextField fx:id="tfSearchBar" />
                      <Accordion fx:id="accordionPeliculas">
                          <panes>
                              <TitledPane animated="false" text="Sin genero" />
                          </panes>
                      </Accordion>
              </items>
            </SplitPane>
            </children>
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
                <TableView fx:id="tablaPeliculas" editable="true" StackPane.alignment="TOP_CENTER">
                    <columns>
                        <TableColumn fx:id="colPortada" prefWidth="100.0" text="Portada" />
                        <TableColumn fx:id="colTitulo" prefWidth="100.0" text="Titulo" />
                        <TableColumn fx:id="colGenero" prefWidth="100.0" text="Genero" />
                        <TableColumn fx:id="colAnho" prefWidth="100.0" text="A単o de lanzamiento" />
                        <TableColumn fx:id="colDirector" prefWidth="100.0" text="Director" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </StackPane>
        <StackPane prefHeight="150.0" prefWidth="200.0">
            <children>
            <Accordion>
              <panes>
                <TitledPane animated="false" text="Editar">
                     <content>
                            <VBox alignment="CENTER" prefWidth="250.0" spacing="15.0">
                                <padding>
                                    <Insets top="10.0" />
                                </padding>
                                <Label text="Detalles de la pelicula">
                                    <font>
                                        <Font name="System Bold" size="16.0" />
                                    </font>
                                </Label>
                                <GridPane alignment="TOP_CENTER" hgap="10.0" vgap="10.0">
                                    <Label text="Titulo:" GridPane.rowIndex="0" />
                                    <TextField fx:id="tfTitulo" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <Label text="Genero:" GridPane.rowIndex="1" />
                                    <TextField fx:id="tfGenero" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                                    <Label text="Director:" GridPane.rowIndex="2" />
                                    <TextField fx:id="tfDirector" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                    <Label text="A単o:" GridPane.rowIndex="3" />
                              <ComboBox fx:id="cbAnhoEditar" prefWidth="150.0" promptText="Seleccionar a単o" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                    <columnConstraints>
                                        <ColumnConstraints />
                                        <ColumnConstraints />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>
                                </GridPane>
                                <HBox alignment="CENTER" spacing="10.0">
                                    <Button fx:id="btnAnadir" onAction="#handleAnadir" text="A単adir" />
                                    <Button fx:id="btnModificar" onAction="#handleModificar" text="Modificar" />
                                    <Button fx:id="btnEliminar" onAction="#handleEliminar" text="Eliminar" />
                                </HBox>
                                <Button fx:id="btnLimpiar" onAction="#handleLimpiar" text="Limpiar Formulario" />
                                <Button fx:id="btnSubmit" onAction="#handleSubmit" text="Aplicar cambios" />
                           <Label fx:id="feedbackL" />
                            </VBox>
                     </content>
                  </TitledPane>
                <TitledPane animated="false" text="Filtrar">
                     <content>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <TextField fx:id="tfSearchBarFilter" promptText="Titulo, genero, actor..." />
                           </children>
                        </VBox>
                     </content></TitledPane>
              </panes>
            </Accordion>
            </children>
        </StackPane>
    </items>
</SplitPane>
